//
// Article
//
.artcle-cover
  position: relative
  height: 20rem
  border-radius(border-radius-value)
  overflow: hidden
  .artcle-cover-img
    position: relative
    min-height: 100%
    min-width: 100%
    center-y()

.article-inner
  padding: spacer
  // Media Query
  @media mq-normal
    max-width: 80rem
    margin-right: auto
    margin-left: auto

.article-header
  margin-bottom: 1rem

.article-more-link
  margin-bottom: 0

.article-tag-list
  list-unstyled()
  .article-tag-list-item
    display: inline-block
    padding: spacer